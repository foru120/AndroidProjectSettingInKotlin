<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dialog_exception_background">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ver_guideline_0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/ver_guideline_0.9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hor_guideline_0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/hor_guideline_0.9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:includeFontPadding="false"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="@+id/ver_guideline_0.1"
            app:layout_constraintEnd_toEndOf="@+id/ver_guideline_0.9"
            app:layout_constraintTop_toTopOf="@+id/hor_guideline_0.1" />

        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="14sp"
            android:textColor="@color/gray_45"
            android:includeFontPadding="false"
            android:gravity="center_vertical"
            android:scrollbars="vertical"
            android:scrollbarSize="2dp"
            android:scrollbarStyle="outsideInset"
            app:layout_constraintStart_toStartOf="@+id/dialog_title"
            app:layout_constraintEnd_toEndOf="@+id/dialog_title"
            app:layout_constraintTop_toBottomOf="@+id/dialog_title"
            app:layout_constraintBottom_toTopOf="@+id/ok_btn"/>

        <TextView
            android:id="@+id/ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textColor="@color/purple_100"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/hor_guideline_0.9"
            app:layout_constraintEnd_toEndOf="@+id/ver_guideline_0.9">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>